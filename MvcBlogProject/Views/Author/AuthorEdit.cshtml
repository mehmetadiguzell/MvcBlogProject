@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Güncelleme</h2>

<br />
<form class="form-group" method="post">
    <label>Yazar Adı Soyad</label>
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    <br />
    <label>Resim Yolu</label>
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
    <br />
    <label>Yazar Yetenekleri</label>
    @Html.TextBoxFor(x => x.AboutShort, new { @class = "form-control" })
    <br />
    <label>Yazarın Statüsü</label>
    @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.AuthorMail, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.AuthorPhone, new { @class = "form-control" })
    <br />
    <label>Şifre</label>
    @Html.TextBoxFor(x => x.AuthorPassword, new { @class = "form-control" })
    <br />
    <label>İçerik</label>
    @Html.TextAreaFor(x => x.AuthorAbout, 3, 20, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x=>x.AuthorId)
    <button class="btn btn-secondary" type="submit">Kaydet</button>
</form>

